{
  "name": "@dddenis/firestore-fp",
  "version": "0.1.0",
  "description": "Firestore with fp-ts and DataLoader",
  "homepage": "https://github.com/dddenis/firestore-fp",
  "bugs": {
    "url": "https://github.com/dddenis/firestore-fp/issues"
  },
  "license": "MIT",
  "author": {
    "name": "Denis Goncharenko",
    "email": "dddenjer@gmail.com"
  },
  "files": [
    "./build"
  ],
  "main": "./build/index.js",
  "types": "./build/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/dddenis/firestore-fp.git"
  },
  "packageManager": "yarn@3.0.2",
  "sideEffects": false,
  "workspaces": [
    "./example"
  ],
  "scripts": {
    "build": "yarn clean && tsc",
    "build:ci": "yarn build && yarn w:example build",
    "clean": "rm -rf ./build",
    "format": "yarn format:base .",
    "format:base": "prettier --config ./.prettierrc.ci.js --write",
    "lint": "yarn lint:base .",
    "lint:base": "eslint --config .eslintrc.ci.js --max-warnings=0",
    "postinstallDev": "husky install",
    "w:example": "yarn workspace example"
  },
  "dependencies": {
    "ts-toolbelt": "^9.0.0"
  },
  "devDependencies": {
    "@dddenis/dataloader-fp": "0.1.1",
    "@google-cloud/firestore": "4.15.1",
    "@typescript-eslint/eslint-plugin": "4.31.1",
    "@typescript-eslint/parser": "4.31.1",
    "dataloader": "2.0.0",
    "eslint": "7.32.0",
    "eslint-config-prettier": "8.3.0",
    "fp-ts": "2.11.2",
    "husky": "7.0.2",
    "lint-staged": "11.1.2",
    "prettier": "2.4.0",
    "prettier-plugin-organize-imports": "2.3.3",
    "typescript": "4.4.3"
  },
  "peerDependencies": {
    "@dddenis/dataloader-fp": "^0.1.0",
    "@google-cloud/firestore": "^4.0.0",
    "fp-ts": "^2.11.0"
  }
}
